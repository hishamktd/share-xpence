# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,jsonc,yaml,yml}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2

[Makefile]
indent_style = tab

[*.dart]
indent_size = 2

[*.go]
indent_style = tab
